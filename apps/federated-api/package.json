{
  "name": "@app/federated-api",
  "version": "0.0.0",
  "description": "This is the federated API, serving all the services as simple REST API",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "tsup && node dist/index.cjs",
    "test": "jest --passWithNoTests --runInBand --detectOpenHandles --forceExit",
    "test:watch": "concurrently \"tsup --watch --preserveWatchOutput\" \"jest --watch\" -n \"tsup,jest\" -c \"blue,green\""
  },
  "keywords": [],
  "author": "Saad Ahmad <saadkwi12@hotmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.49.2",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.52.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.52.1",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-metrics": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/sdk-trace-node": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@repo/contracts": "workspace:*",
    "@repo/orchestrators": "workspace:*",
    "@repo/services": "workspace:*",
    "@repo/utilities": "workspace:*",
    "arvo-core": "^2.2.10",
    "arvo-event-handler": "^2.2.10",
    "arvo-xstate": "^2.2.10",
    "dotenv": "^16.4.7",
    "hono": "^4.6.19",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  }
}
